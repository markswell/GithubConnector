<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView
    android:id="@+id/card"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="@dimen/dois"
    android:background="@color/colorCard"
    app:cardElevation="@dimen/oito"
    android:layout_marginTop="@dimen/oito"
    android:layout_marginBottom="@dimen/zero"
    android:layout_marginLeft="@dimen/dezesseis"
    android:layout_marginRight="@dimen/dezesseis"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:contentPadding="@dimen/oito">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <TextView
            android:id="@+id/nome_repo"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="@dimen/vintedoissp"
            android:text="@string/nome_repositorio"/>

    </LinearLayout>
</android.support.v7.widget.CardView>
