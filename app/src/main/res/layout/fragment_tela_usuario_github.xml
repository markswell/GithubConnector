<LinearLayout
    android:orientation="vertical"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.markswell.githubconector.fragments.TelaUsuarioGithubFragment">

    <include layout="@layout/cabecalho"/>

    <TextView
        android:id="@+id/nome_usuario"
        android:layout_width="match_parent"
        android:layout_height="@dimen/cinquenta"
        android:textSize="@dimen/vintedoissp"
        android:gravity="center"
        android:text="@string/nome_usuario"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/lista_repositorios"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>

</LinearLayout>
